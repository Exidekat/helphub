{
  "name": "juwish-site",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "vite dev --host",
    "build": "vite build --emptyOutDir",
    "start": "bun run build && bun vercel",
    "prod": "bun run build && bun vercel --prod",
    "app": "bun cap sync && bun cap copy && bun run app:android && bun run app:ios",
    "app:android": "cd android && ./gradlew assembleRelease && ./gradlew bundleRelease",
    "app:ios": "cd ios/App && xcodebuild -scheme App -configuration Release"
  },
  "dependencies": {
    "@capacitor-community/contacts": "^6.1.1",
    "@capacitor/android": "^7.0.1",
    "@capacitor/assets": "^3.0.5",
    "@capacitor/cli": "^7.0.1",
    "@capacitor/ios": "^7.0.1",
    "@neondatabase/serverless": "^0.10.4",
    "@vercel/node": "^5.1.7",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.7",
    "next": "^15.1.7",
    "pg": "^8.13.1",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-markdown": "^9.0.3",
    "vercel": "^41.3.0"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.0.0",
    "postcss": "^8.0.0",
    "tailwindcss": "^3.0.0",
    "typescript": "^5.0.0",
    "vite": "^4.0.0"
  }
}