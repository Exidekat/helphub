{
  "version": 2,
  "rewrites": [
    { "source": "/scan/:path*",    "destination": "/index.html" },
    { "source": "/overview",       "destination": "/index.html" },
    { "source": "/overview/:path*", "destination": "/index.html" }
  ],
  "buildCommand": "bun run build",
  "outputDirectory": "backend/public",
  "functions": {
    "**/*.ts": { "runtime": "@vercel/node@1.14.0" }
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  }
}
